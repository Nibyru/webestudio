<div class="row">
   <div class="span6 grey-box">
      <h2>Informaci√≥n del Sitio</h2>
      <br>
       <%= simple_form_for Content.last || @new_content, html: {multipart: true}, defaults: { input_html: { class: 'input-block-level' } } do |f| %>
         <%= f.input  :person_message, label: 'Mensaje Personal' %>
         <%= f.input  :about_us, as: :text, input_html: { class: 'wysihtml5 input-block-level' }, label: 'Acerca de Nosotros' %>
         <%= f.input  :us_message, label: 'Nuestro mensaje' %>
         <%= f.input  :direction, label: 'Direccion' %>
         <%= f.input  :telephone, label: 'Telefono' %>
         <%= f.input  :email %>
         <%= f.input  :facebook %>
         <%= f.input  :twitter %>
         <%= f.input  :linkedin %>
         <%= f.button :submit, 'Guardar Informacion', class: "btn btn-info" %>
      <% end %>
   </div>
   <div class="span5 list">
      <h2>Portada</h2>
      <%= simple_form_for @slider, html: {multipart: true}, defaults: { input_html: { class: 'input-block-level' } } do |f| %>
        <%= image_tag(@slider.photo.url(:slider)) if @slider.photo? %>
        <%= f.input  :title, label: 'Titulo' %>
        <%= f.input  :header, label: 'Cabecera' %>
        <%= f.input  :photo, label: 'Imagen', class: "btn btn-info" %>
        <%= f.button :submit, 'Guardar cambios', class: "btn btn-info" %>
      <% end %>
   </div>
</div>