<section id="bottom">
  <div id="formulario">
    <div class="container">
    <h3> Para ponerse en contacto con nosotros, por favor complete el formulario y nos comunicaremos a la brevedad.</h3>
    <%= simple_form_for @contact do |f| %>
      <div class="row">
        <div class="span5 offset1">
          <%= f.input :name, placeholder:"Nombre", label: false %>
          <%= f.input :company, placeholder:"Empresa", label: false %>
          <%= f.input :telephone, placeholder:"TelÃ©fono", label: false %>
          <%= f.input :email, placeholder:"E-mail", label: false %>
        </div>
        <div class="span5">
          <%= f.input :content, placeholder:"Consulta", label: false %>
          <%= f.submit %>
        </div>
      </div>
    <% end %>
    </div>
  </div>
  <div id="map">
    <iframe width="1900" height="425" frameborder="0" scrolling="no" marginheight="0" marginwidth="0" src="http://maps.google.com.ar/maps/ms?msa=0&amp;msid=209634190358231717209.0004e53504b97c44d602e&amp;gl=ar&amp;ie=UTF8&amp;t=m&amp;ll=-24.190332,-65.299194&amp;spn=0.008319,0.04077&amp;z=16&amp;output=embed"></iframe>
  </div>
  <div class="container" style="margin-top: 15px;">
    <div class="row margin-40">
      <div class="span10 offset1 text-center">
        <p>
          <i class="icon-hand-up"></i> Mapa Interactivo | 
          <b class="blue-color"><%= @content.direction %>, Jujuy, Argentina</b> | 
          <i class="icon-phone"></i> <%= @content.telephone %>  |  
          <a href="mailto:<%= @content.email %>">
            <i class="icon-envelope-alt"></i> <%= @content.email %>
          </a>
        </p>
        <hr>
      </div>
    </div>
    
    <div class="row">
      <div class="span10 offset1 text-center">
        <!--Social Icons-->
        <ul class="social-icons">
          <li><a class="twitter" href="<%= @content.twitter %>" target="_blank"><i class="icon-twitter icon-3x"></i></a></li>
          <li><a class="facebook" href="<%= @content.facebook %>" target="_blank"><i class="icon-facebook icon-3x"></i></a></li>
          <li><a class="linkedin" href="<%= @content.facebook %>" target="_blank"><i class="icon-linkedin icon-3x"></i></a></li>
        </ul>
      </div>
    </div>
    
  </div>
</section>


<section id="footer">
  <div class="container">
    <div class="row">
      <div class="span12 text-center">
        <p>Created by <a href="mailto:contacto@nibyru.com">Nibyru.</a></p>
      </div>
    </div>
  </div>
</section>

<a href="#top" class="scrollToTop hidden-phone" style="display: none;"><i class="icon-chevron-up"></i></a>

